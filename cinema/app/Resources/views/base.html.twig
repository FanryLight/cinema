<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Starlight Cinema{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">
            <link href="{{ asset('css/bootstrap-theme.css') }}" rel="stylesheet">
            <link href="{{ asset('css/style.css') }}" rel="stylesheet">
            <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Oswald" />
            <link href="{{ asset('css/star-rating.css') }}" rel="stylesheet">
            <script src="https://code.jquery.com/jquery.min.js"></script>
            <script rel="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
            <script rel="text/javascript" src="{{ asset('js/star-rating.js') }}"></script>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <nav class="collapse  navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a class="navbar-brand logo" href="/">
                        <img src="{{ asset('img/logo.png') }}">
                    </a></li>
                <li><a href="/cinema/prospect">Prospect</a></li>
                <li><a href="/cinema/sky_mall">Sky Mall</a></li>
                <li><a href="/cinema/ocean_plaza">Ocean Plaza</a></li>
                <li><a href="/about">About us</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <p class="navbar-text">Hi,
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
                        <a href="/admin">{{ app.user }}</a>!
                    {% endif %}
                    You have {{ app.user.coins }}
                <span class="glyphicon glyphicon-piggy-bank"></span></p>
                <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span></a></li>
            {% else %}
                    <li>
                        <a data-toggle="modal" data-target="#loginModal"
                           href="{{ path('fos_user_security_login') }}">
                            Sign in
                        </a>
                    </li>
                    <li>
                        <a class="text-right" data-toggle="modal" data-target="#registerModal"
                           href="{{ path('fos_user_registration_register') }}">Sign up</a>
                    </li>
            {% endif %}
            </ul>
        </nav>
    </nav>
        {#<!-- Modal Login-->#}
        <div id="loginModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document"  style="height: 320px; width: 500px;">
                <div class="modal-content" style="height: 300px; width: 500px;">
                </div>
            </div>
        </div>

    {#<!-- Modal Register-->#}
    <div id="registerModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document"  style="height: 450px; width: 500px;">
            <div class="modal-content" style="height: 300px; width: 500px;">
            </div>
        </div>
    </div>


<div class="myBody">
        {% block body %}{% endblock %}
</div>
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/style.js') }}"></script>
        {% endblock %}
    <div class="panel-footer text-center">Made by Svitlana Medoeva 2017</div>
    </body>
</html>


