{% extends 'admin.html.twig' %}
{% block title %}Add Movie | Admin Panel{% endblock %}
{% block body %}
    <form class="form-horizontal"  action="{{ action }}" method="post">
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="name" id="name" required value="{{ movie.name }}">
            </div>
        </div>
        <div class="form-group">
            <label for="originalName" class="col-sm-2 control-label">Original name</label>
            <div class="col-sm-8">
                <input class="form-control" type="text" id="originalName" name="original_name" value="{{ movie.originalName }}">
            </div>
        </div>

        <div class="form-group">
            <label for="premiereDate" class="col-sm-2 control-label">Premiere Date</label>
            <div class="col-sm-8">
                <input class="form-control" id="premiereDate" type="date" name="date" required value="{{ movie.premiereDate }}">
            </div>
        </div>

        <div class="form-group">
            <label for="genres" class="col-sm-2 control-label">Genres</label>
            <div class="col-sm-8">
                <input class="form-control" id="genres" type="text" name="genres" required value="{{ movie.genres }}">
            </div>
        </div>

        <div class="form-group">
            <label for="director" class="col-sm-2 control-label">Director</label>
            <div class="col-sm-8">
                <input class="form-control" id="director" type="text" name="director" required value="{{ movie.director }}">
            </div>
        </div>
        <div class="form-group">
            <label for="starring" class="col-sm-2 control-label">Starring</label>
            <div class="col-sm-8">
                <input class="form-control" id="starring" type="text" name="starring" required value="{{ movie.starring }}">
            </div>
        </div>

        <div class="form-group">
            <label for="country" class="col-sm-2 control-label">Country</label>
            <div class="col-sm-8">
                <input class="form-control" id="country" type="text" name="country" required value="{{ movie.country }}">
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-8">
                <textarea id="description" class="form-control" rows="3" name="description" required>{{ movie.description }}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="picture" class="col-sm-2 control-label">Picture URL</label>
            <div class="col-sm-8">
                <input class="form-control" id="picture" type="text" name="picture" required value="{{ movie.picture }}">
            </div>
        </div>
        <div class="form-group">
            <label for="trailer" class="col-sm-2 control-label">Trailer URL</label>
            <div class="col-sm-8">
                <input class="form-control" id="trailer" type="text" name="trailer" value="{{ movie.trailer }}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">{{ button }}</button>
            </div>
        </div>
    </form>
{% endblock %}