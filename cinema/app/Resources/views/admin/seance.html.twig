{% extends 'admin.html.twig' %}
{% block title %}Add Seance | Admin Panel{% endblock %}
{% block body %}
<form class="form-horizontal" action="add_seance" method="post">
    <div class="form-group">
        <label for="movie" class="col-sm-2 control-label">Movie</label>
        <div class="col-sm-8">
            <select class="form-control" id="movie" name="movie">
                <option disabled>Choose the movie</option>
                {% for movie in movies %}
                    <option value={{ movie.id }}>{{ movie.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="hall" class="col-sm-2 control-label">Hall</label>
        <div class="col-sm-8">
            <select class="form-control" id="hall" name="hall">
                <option disabled>Choose the hall</option>
                {% for hall in halls %}
                    <option value={{ hall.id }}>{{ hall.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="time" class="col-sm-2 control-label">Time</label>
        <div class="col-sm-8">
            <input class="form-control" type="time" name="time" id="time" required>
        </div>
    </div>
    <div class="form-group">
        <label for="date" class="col-sm-2 control-label">Date</label>
        <div class="col-sm-8">
            <input class="form-control" type="date" name="date" id="date" required>
        </div>
    </div>
    <div class="form-group">
        <label for="price" class="col-sm-2 control-label">Price</label>
        <div class="col-sm-8">
            <input class="form-control" type="number" name="price" id="price" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Add</button>
        </div>
    </div>
</form>

{% endblock %}