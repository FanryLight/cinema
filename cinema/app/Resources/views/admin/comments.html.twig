{% extends 'admin.html.twig' %}
{% block title %}Comments | Admin Panel{% endblock %}
{% block body %}
    <table class="table table-hover">
        <tr>
            <td class="text-center"><h4>Username</h4></td>
            <td class="text-center"><h4>Text</h4></td>
            <td class="text-center"><h4>On site</h4></td>
            <td class="text-center"><h4>Block User</h4></td>
            <td class="text-center"><h4>Delete</h4></td>
        </tr>
        {% for comment in comments %}
            <tr>
                <td class="text-center">{{ comment.user.username }}</td>
                <td class="text-center">{{ comment.text }}</td>
                <td class="text-center"><a href="/movie/{{ comment.movie.originalName }}"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td class="text-center"><a href="/admin/block_user/{{ comment.user.id }}"><span class="glyphicon glyphicon-ban-circle"></span></a></td>
                <td class="text-center"><a href="/admin/delete_comment/{{ comment.id }}"><span class="glyphicon glyphicon-remove"></span></a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}