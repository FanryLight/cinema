{% trans_default_domain 'FOSUserBundle' %}
{% block user_content %}
    <div class="modal-content" style="height: 450px; width: 500px;">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Register</h4>
    </div>
    <div class="modal-body">
    <form action="{{ path('fos_user_registration_register') }}" method="POST" class="form col-md-12 center-block" id="registerForm">
        {% if csrf_token is defined%}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="form-group">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control input-lg', 'placeholder': 'Email' } }) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.username, { 'attr': {'class': 'form-control input-lg', 'placeholder': 'Username' } }) }}
            {{ form_errors(form.username) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control input-lg', 'placeholder': 'Password' } }) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control input-lg', 'placeholder': 'Confirm Password' } }) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
        <div class="form-group">
            {{ form_rest(form) }}
        </div>
        <div>
            <input class="btn btn-lg btn-success btn-block" type="submit" value="Register">
        </div>
        <div class="error text-danger text-center"></div>
    </form>
    </div>
    </div>
{% endblock %}
<script src="{{ asset('js/style.js') }}"></script>